@model GameStore.Web.ViewModel.Order.OrderViewModel

@{
    ViewData["Title"] = "Busket";
}

<hr />
<div class="container">
    <div class="card">
        <div class="card-header">
            Order info
        </div>
        <div class="card-body">
            @if (Model.OrderDetails.Count != 0)
            {
                <h5>Order Details : </h5>
                <table class="table table-bordered">
                    <tr>
                        <td>Game</td>
                        <td>Quantity</td>
                        <td>Discount</td>
                        <td>Price</td>
                    </tr>
                    @foreach (var item in @Model.OrderDetails)
                    {
                        <tr>
                            <td>@item.Game.Name</td>
                            <td>@item.Quantity</td>
                            <td>@item.Discount</td>
                            <td>@item.Price</td>
                        </tr>
                    }
                </table>
                <h5>Total price: @Model.TotalPrice</h5>
                <form action="/order/@Model.Id" method="post">
                    <input type="submit" value="Make Order" class="btn btn-primary w-50 d-block mx-auto" />
                </form>
            }
            else
            {
                <h5>There are no games in the basket yet</h5>
            }
        </div>
    </div>
</div>
