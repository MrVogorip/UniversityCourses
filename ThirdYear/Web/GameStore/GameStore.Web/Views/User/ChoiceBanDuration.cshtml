@using GameStore.Domain.Enums
@model GameStore.Web.ViewModel.User.BanUserViewModel

@{
    ViewData["Title"] = "ChoiceBanDuration";
}

<hr />
<div class="container">
    <div class="card">
        <div class="card-header">
            Ban
        </div>
        <div class="card-body">
            <form asp-action="SetBanned" asp-controller="User" method="get">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BanDuration" class="control-label">Duration</label>
                    <select name="BanDuration" class="custom-select">
                        @foreach (var item in Enum.GetValues(typeof(BanDuration)).Cast<BanDuration>())
                        {
                            <option value="@item">@item</option>
                        }
                    </select>
                    <span asp-validation-for="BanDuration" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Ban" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>






